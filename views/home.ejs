<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message){%>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.text %></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <table class="table table-success table-striped text-center">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col">Id</th>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index)=>{ %>
                        <tr class="align-middle">
                          <th scope="row"><%= index+1 %></th>
                          <td><img src="<%= user.image %>" class="img-thumbnail" alt="User Image" width="50" ></td>
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                          <td><%= user.phone %></td>
                          <td>
                            <a href="/edit/<%= user._id %>" class=" "><i class="fa-solid fa-user-pen fa-xl mx-2" style="color: #74C0FC;"></i></a>
                            <a href="/delete/<%= user._id %>" class=" " id="btn1"  onclick="fire()" ><i class="fa-sharp fa-solid fa-trash-can fa-xl mx-2" style="color: #fd7272;"></i></a>
                          </td>

                        </tr>
                        <%}); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>