<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success " >
                    <h3 class="text-light">Edit User <%= user.name %></h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control form-control-lg" value="<%= user.name %>"  name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control form-control-lg" value="<%= user.email %>" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone">Phone Number:</label>
                            <input type="tel" class="form-control form-control-lg" value="<%= user.phone %>"  name="phone" required>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image:</label>
                            <input type="file" class="form-control form-control-lg"    name="image" required>
                            <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1" alt="">
                        </div>
                        <input type="hidden" name="oldImage" value="<%= user.image %>" />
                        <div class="mb-3 d-grid ">
                            <button type="submit" name="submit" value="Update User" class="btn btn-success  btn-lg text-light">Update User</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>